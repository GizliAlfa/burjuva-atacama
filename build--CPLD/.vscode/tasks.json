{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CPLD: Compile (Ctrl+Shift+B)",
      "type": "shell",
      "command": "quartus_sh",
      "args": [
        "--flow",
        "compile",
        "cpld"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "CPLD: Generate Programming File",
      "type": "shell",
      "command": "quartus_asm",
      "args": [
        "cpld"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "CPLD: Upload to Raspberry Pi",
      "type": "shell",
      "command": "scp",
      "args": [
        "output_files/cpld.svf",
        "burjuva@192.168.1.22:/tmp/"
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": ["CPLD: Compile (Full)"],
      "problemMatcher": []
    },
    {
      "label": "CPLD: Program via SSH",
      "type": "shell",
      "command": "ssh",
      "args": [
        "-t",
        "burjuva@192.168.1.22",
        "sudo /tmp/program_cpld.sh"
      ],
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": ["CPLD: Upload to Raspberry Pi"],
      "problemMatcher": []
    },
    {
      "label": "CPLD: Full Build & Program",
      "dependsOn": [
        "CPLD: Compile (Full)",
        "CPLD: Upload to Raspberry Pi",
        "CPLD: Program via SSH"
      ],
      "dependsOrder": "sequence",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "CPLD: Clean",
      "type": "shell",
      "command": "rm",
      "args": [
        "-rf",
        "db",
        "incremental_db",
        "output_files"
      ],
      "windows": {
        "command": "cmd",
        "args": [
          "/c",
          "rmdir /s /q db incremental_db output_files 2>nul || echo Cleaned"
        ]
      },
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
